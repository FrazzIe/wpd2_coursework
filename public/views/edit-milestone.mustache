<html lang="en">
	
	<head>
		{{>header}}
	</head>

	<body>
		{{>nav}}
		<div class="container">
			{{>alert}}
			<h1 class="display-4">{{ title }}</h1>

			<form id="edit-milestone-form" >Â   

				{{#item}}
                    <input type="text" class="d-none" id="edit-milestone-project-id" value="{{ project_id }}" readonly>

					<div class="form-group row">
						<label for="edit-milestone-id" class="col-sm-2 col-form-label">ID</label>
						<div class="col-sm-10">
							<input type="text" readonly class="form-control-plaintext" id="edit-milestone-id" value="{{ id }}">
						</div>
					</div>

					<div class="form-group row">
						<label for="edit-milestone-title" class="col-sm-2 col-form-label">Milestone name</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" id="edit-milestone-title" name="edit-milestone-title"  value="{{ title }}" >
						</div>
					</div>

					<div class="form-group row">
						<label for="edit-milestone-description" class="col-sm-2 col-form-label">Milestone description</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" id="edit-milestone-description" name="edit-milestone-description" value="{{ description }}" >
						</div>
					</div>

					<div class="form-group row">
						<div class="col-sm">
							<input type="submit" value="Save milestone details" class="btn btn-primary">
						</div>
					</div>

				{{/item}}

			</form>
		</div>
		{{>footer}}
		<script src="/../../js/edit-milestone.js"></script>
	</body>

</html>