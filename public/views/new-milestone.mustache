<html lang="en">

	<head>
		{{>header}}
	</head>

	<body>
		{{>nav}}
		<div class="container">
			{{>alert}}
			<h1 class="display-4">{{ title }}</h1>

			<form id="new-milestone-form" method="post" role="form">
				<input type="text" class="d-none" id="new-milestone-project-id" value="{{ project_id }}" readonly>

				<div class="form-group">
					<label for="milestone">Milestone</label>
			    	<input type="text" class="form-control" id="new-milestone-title" name="milestone" placeholder="Milestone name" required>
				</div>

				<div class="form-group">
					<label for="desc">Description</label>
				    <input type="text" class="form-control" id="new-milestone-desc" name="desc" placeholder="Milestone description" required>
				</div>

				<div class="form-group">
					<input type="submit" value="Add milestone" class="btn btn-primary">
				</div>

			</form>
		</div>

		{{>footer}}
		<script src="/../../js/new-milestone.js"></script>
	</body>

</html>