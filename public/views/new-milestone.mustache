<html lang="en">

<head>
    {{>header}}
</head>

<body class="container">

    <h1 class="display-4">{{title}}</h1>
    <h2 class="display-4">Add New Milestone</h2> 

    <form method="post" role="form">
        <div class="form-group">
            <label for="milestone">Milestone</label>
            <input type="text" class="form-control" id="milestone" name="milestone" placeholder="Milestone name" required>
        </div>

        <div class="form-group">
            <label for="completed">Completed</label>
            <input type="text" class="form-control" id="completed" name="completed" placeholder="Completed" required>
        </div>

        <div class="form-group">
            <input type="submit" value="Add milestone" class="btn btn-primary">
        </div>
    </form>

    {{>footer}}
</body>

</html> 
