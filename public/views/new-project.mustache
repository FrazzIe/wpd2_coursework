<html lang="en">

    <head>
        {{>header}}
    </head>

    <body class="container">
        {{>alert}}
        <h1 class="display-4">{{ title }}</h1>

        <form id="new-project-form" method="post" role="form">

          <div class="form-group">
            <label for="project">Project</label>
            <input type="text" class="form-control" id="new-project-title" name="project" placeholder="Project name" required>
          </div>

          <div class="form-group">
            <label for="module">Module</label>
            <input type="text" class="form-control" id="new-project-module" name="module" placeholder="Module name" required>
          </div>

          <div class="form-group">
            <label for="intendedDate">Intended Due Date</label>
            <input type="date" class="form-control" id="new-project-end-date" name="intendedDate" required>
          </div>

          <div class="form-group">
            <label for="actualDate">Actual Due Date</label>
            <input type="date" class="form-control" id="new-project-due-date" name="actualDate" required>
          </div>

          <div class="form-group">
            <input type="submit" value="Add project" class="btn btn-primary">
          </div>

        </form>

        {{>footer}}
        <script src="/../../js/new-project.js"></script>
    </body>

</html>